# LLM Configuration
DIAG_AGENT_LLM_PROVIDER=anthropic
DIAG_AGENT_LLM_MODEL=claude-sonnet-4

# API Keys (choose the provider you're using)
ANTHROPIC_API_KEY=your_anthropic_key_here
# OPENAI_API_KEY=your_openai_key_here
# OLLAMA_API_BASE=http://localhost:11434

# Kroki Configuration
DIAG_AGENT_KROKI_MODE=local  # local, remote, or auto
DIAG_AGENT_KROKI_LOCAL_URL=http://localhost:8000
DIAG_AGENT_KROKI_REMOTE_URL=https://kroki.io
DIAG_AGENT_KROKI_REMOTE_CONFIRMED=false

# Agent Configuration
DIAG_AGENT_MAX_ITERATIONS=5
DIAG_AGENT_MAX_TIME_SECONDS=60
DIAG_AGENT_VALIDATE_DESIGN=true

# Output Configuration
DIAG_AGENT_OUTPUT_DIR=./diagrams
DIAG_AGENT_OUTPUT_FORMATS=source,png,svg

# Logging
DIAG_AGENT_LOG_LEVEL=INFO
